
package boletin4;


public class Libro {
   
    private String titulo;
    private String autor;
    private int ano;
    private short numPax;
    private float valoracion;
    
    public Libro(){
        
    }
    public Libro(String tit,String aut, int a, short nump){
        titulo = tit;
        autor = aut;
        ano = a;
        numPax = nump;
    }
    public String getTitutlo(){
        return titulo;
    }   
    public void setTitulo(){
    this.titulo = titulo;
    }
    public String getAutor(){
    return autor;
    }
    public void setAutor(){
    this.autor = autor;
    }
    public int getAno(){
    return ano;
    }
    public void setAno(){
    this.ano = ano;
    }
    public short getNumPax(){
    return numPax;
    }
    public void setNumPax(){
    this.numPax = numPax;
    }
    public float setValoracion(float valoracion){
    return  valoracion;
    }
    public void getValoracion(){
    this.valoracion = valoracion;
    }
    public void amosar(){
        System.out.println("titulo: " + titulo + "\n autor: " + autor + "\n ano: " + ano + "\n Numero Paxinas: " + numPax + "\n Valoracion: " + valoracion);
    }
}
