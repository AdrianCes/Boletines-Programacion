
package boletin8_1;

import javax.swing.JOptionPane;


public class Boletin8_1 {


    public static void main(String[] args) {
        float x;
        String nombre;
        
        nombre=JOptionPane.showInputDialog("Ingrese el nombre del producto");
        x=Float.parseFloat(JOptionPane.showInputDialog("Ingrese el precio del producto"));
        
        if(x<=100){
            System.out.println("El producto " + nombre + " es de nivel bajo");
        }
        else if(x>100 && x<=500){
            System.out.println("El producto " + nombre + " es de nivel medio");
        }
        else if(x>500 && x<=100){
            System.out.println("El producto " + nombre + " es de nivel alto");
        }
        else if(x>1000){
            System.out.println("El producto " + nombre + " es de primera necesidad");
        }
       
        
    
    }
    
}
